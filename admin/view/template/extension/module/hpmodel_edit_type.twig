                    <input class="bootstrap-switcher form-control" type="checkbox" value="1" name="setting[category_replace_h1]" data-size="small" data-on-color="success" {% if setting.category_replace_h1 %}checked="checked"{% endif %} data-on-text="YES" data-off-text="NO" />
                </td>
                <td class="text-center switcher-edits">
                    <input class="bootstrap-switcher form-control" type="checkbox" value="1" name="setting[category_replace_image]" data-size="small" data-on-color="success" {% if setting.category_replace_image %}checked="checked"{% endif %} data-on-text="YES" data-off-text="NO" />
                </td>
                <td></td>                
            </tr>
            </tbody>
        </table>
        
        <table class="table table-hover table-bordered table-responsive {% if not setting.category_show %}off{% endif %}">
          <thead>
            <td class="text-center status"></td>
            <td class="title-start">
                <label class="control-label"><span data-toggle="tooltip" title="{{ title_cat_html }}">{{ title_name }}</span></label>
            </td>
            <td class="edit-type">
              <div class="required"><label class="control-label"><span data-toggle="tooltip" title="{{ help_sg_key_field }}">{{ entry_sg_key_field }}</span></label>
            </td>
            <td class="edit-links">
                <label class="control-label"><span data-toggle="tooltip" title="{{ entry_types_title }}">{{ entry_types }}</span></label>
            </td>
            {% for i in 0..2 %}
            <td class="edit-type">
                <label class="control-label"><span data-toggle="tooltip" title="{{ kit_fields_title }}">{{ kit_fields }}</span></label>
            </td>
            {% endfor %}
            <td></td>                
            <td class="text-center status">
                <label class="control-label">
                  <span data-toggle="tooltip" title="{{ button_add_sub_remove }}">
                    <b style="line-height: 0; font-size: 18px;">±</b>
                  </span>
                </label>
            </td>
          </thead>
          <tbody>
              <td></td>
              <td class="name-text">
                {% for language in languages %}
                <div class="input-group">
                  <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="setting[category_title][{{ language.language_id }}]" value="{{ setting.category_title[language.language_id] }}" class="form-control" />
                </div>
                {% endfor %}
              </td>
              <td class="form-tables">
                <select name="setting[category_after_title]" class="form-control select-col">
                  {% for key, value in array_h_titles %}
                  {% if setting.category_after_title == key %}
                  <option value="{{ key }}" selected="selected" class="hpm-select">{{ value }}</option>
                  {% else %}
                  <option value="{{ key }}" class="hpm-select">{{ value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="prop prop-attribute" style="display:none;">
                  <input type="hidden" name="setting[category_after_title_attribute]" value="{{ setting.category_after_title_attribute }}" />
                  <input class="form-control" type="text" value="{{ setting.category_after_title_attribute_text }}" />
                </div>
                <div class="prop prop-filter" style="display:none;">
                  <input type="hidden" name="setting[category_after_title_filter]" value="{{ setting.category_after_title_filter }}" />
                  <input class="form-control" type="text" value="{{ setting.category_after_title_filter_text }}" />
                </div>
              </td>
              <td class="edit-links">
                <select name="setting[category_variant]" class="form-control">
                  {% for variant_key, variant_value in array_variants %}
                  {% if setting.category_variant == variant_key %}
                  <option value="{{ variant_key }}" selected="selected">{{ variant_value }}</option>
                  {% else %}
                  <option value="{{ variant_key }}" >{{ variant_value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
              </td>
              {% for i in 0..2 %}
              <td class="form-tables">
                <select name="setting[category_columns][{{ i }}]" class="form-control select-col">
                  {% for columns_key, columns_value in array_columns %}
                  {% if setting.category_columns[i] == columns_key %}
                  <option value="{{ columns_key }}" selected="selected" class="hpm-select">{{ columns_value }}</option>
                  {% else %}
                  <option value="{{ columns_key }}" class="hpm-select">{{ columns_value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="prop prop-attribute" style="display:none;">
                  <input type="hidden" name="setting[category_attributes][{{ i }}]" value="{{ setting.category_attributes[i] }}" />
                  <input class="form-control" type="text" value="{{ setting.category_attributes_text[i] }}" />
                </div>
                <div class="prop prop-filter" style="display:none;">
                  <input type="hidden" name="setting[category_filters][{{ i }}]" value="{{ setting.category_filters[i] }}" />
                  <input class="form-control" type="text" value="{{ setting.category_filters_text[i] }}" />
                </div>
              </td>
              {% endfor %}
              <td></td>                
              <td></td>                
          </tbody>
          <tbody id="category-sub-group-table">
            {% set category_sg_row = 0 %}
            {% for sub_group in setting.category_sub_group %}
            <tr>
              <td></td>
              <td>
                {% for language in languages %}
                <div class="input-group">
                  <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="setting[category_sub_group][{{ category_sg_row }}][title][{{ language.language_id }}]" value="{{ sub_group.title[language.language_id] }}" class="form-control" />
                </div>
                {% endfor %}
              </td>
              <td>
                <select name="setting[category_sub_group][{{ category_sg_row }}][key]" class="form-control select-col">
                  {% for key, value in array_h_titles %}
                  {% if sub_group.key == key %}
                  <option value="{{ key }}" selected="selected" class="hpm-select">{{ value }}</option>
                  {% else %}
                  <option value="{{ key }}" class="hpm-select">{{ value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="prop prop-attribute" style="display:none;">
                  <input type="hidden" name="setting[category_sub_group][{{ category_sg_row }}][attr]" value="{{ sub_group.attr }}" />
                  <input class="form-control" type="text" value="{{ sub_group.attr_text }}" />
                </div>
                <div class="prop prop-filter" style="display:none;">
                  <input type="hidden" name="setting[category_sub_group][{{ category_sg_row }}][filter]" value="{{ sub_group.filter }}" />
                  <input class="form-control" type="text" value="{{ sub_group.filter_text }}" />
                </div>
              </td>
              <td>
                <select name="setting[category_sub_group][{{ category_sg_row }}][variant]" class="form-control">
                  {% for variant_key, variant_value in array_variants %}
                  {% if sub_group.variant == variant_key %}
                  <option value="{{ variant_key }}" selected="selected">{{ variant_value }}</option>
                  {% else %}
                  <option value="{{ variant_key }}" >{{ variant_value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
              </td>
              {% for i in 0..2 %}
              <td class="form-tables">
                <select name="setting[category_sub_group][{{ category_sg_row }}][col][{{ i }}]" class="form-control select-col">
                  {% for key, value in array_columns %}
                  {% if sub_group.col[i] == key %}
                  <option value="{{ key }}" selected="selected" class="hpm-select">{{ value }}</option>
                  {% else %}
                  <option value="{{ key }}" class="hpm-select">{{ value }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
                <div class="prop prop-attribute" style="display:none;">
                  <input type="hidden" name="setting[category_sub_group][{{ category_sg_row }}][col_attr][{{ i }}]" value="{{ sub_group.col_attr[i] }}" />
                  <input class="form-control" type="text" value="{{ sub_group.col_attr_text[i] }}" />
                </div>
                <div class="prop prop-filter" style="display:none;">
                  <input type="hidden" name="setting[category_sub_group][{{ category_sg_row }}][col_filter][{{ i }}]" value="{{ sub_group.col_filter[i] }}" />
                  <input class="form-control" type="text" value="{{ sub_group.col_filter_text[i] }}" />
                </div>
              </td>
              {% endfor %}
              <td></td>
              <td class="text-center">
                <button onclick="$(this).closest('tr').remove();" form="none" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-sm btn-danger"><i class="fa fa-remove"></i></button>
              </td>
            </tr>
            {% set category_sg_row = category_sg_row + 1 %}
            {% endfor %}
          </tbody>
          <tfoot>
            <tr>
                <td colspan="8"></td>
                <td class="text-center">
                    <button  onclick="addCategorySubGroup();" form="none" data-toggle="tooltip" title="{{ button_add_sub_group }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i></button>
                </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    
