<legend class="sub">{{ text_footer_copyright_legend }}</legend>

<div class="form-group">
	<label class="col-sm-2 control-label">
		<span data-toggle="tooltip" title="{{ help_footer_copyright }}">
			{{ entry_footer_copyright }}
		</span>
	</label>

	<div class="col-sm-10">
		{% for language in languages %}
		<div class="input-group">
			<span class="input-group-addon">
				<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.language_id }}"/>
			</span>
			<input
				class="form-control"
				name="settings[oxyo][oxyo_copyright][{{ language.language_id }}]"
				value="{{ oxyo_copyright[language.language_id] ? oxyo_copyright[language.language_id] }}"
			/>
		</div>
		{% endfor %}
	</div>
</div>


<script>
	$('#footer-column-tabs a:first').tab('show');

	var footer_column_row = {{ footer_column_row }};

	function addFooterColumn() {
		let html = '<div class="tab-pane" id="footer-column-' + footer_column_row + '">';
		html += '<div class="tab-content">';

		html += '<table id="footer_column-' + footer_column_row + '" class="table table-clean table-footer-column">';
		html += '<thead>';
		html += '<tr>';
		html += '<td width="96%"><h4>{{ text_column_heading }}</h4></td>';
		html += '<td width="4%">{{ column_sort_order }}</td>';
		html += '</tr>';
		html += '</thead>';
		html += '<tbody>';
		html += '<tr id="link-row' + footer_column_row + '">';
		html += '<td class="first">';

		{% for language in languages %}
            html += '<div class="input-group">';
            html += '<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/></span>';
            html += '<input type="text" class="form-control" name="settings[oxyo][oxyo_footer_columns][' + footer_column_row + '][title][{{ language.language_id }}]"/>';
            html += '</div>';
		{% endfor %}

		html += '</td>';
		html += '<td class="text-end">';
		html += '<input type="text" class="form-control" style="width:60px" value="' + footer_column_row + '" name="settings[oxyo][oxyo_footer_columns][' + footer_column_row + '][sort]"/>';
		html += '</td>';
		html += '</tr>';
		html += '</tbody>';
		html += '</table>';

		html += '<table id="links-holder-' + footer_column_row + '" class="table table-clean">';
		html += '<thead>';
		html += '<tr>';
		html += '<td width="48%"><h4>{{ text_column_links }}</h4></td>';
		html += '<td width="48%"><span data-toggle="tooltip" title="{{ help_link_target }}">{{ text_link_target }}</span></td>';
		html += '<td width="4%"><span style="white-space:nowrap">{{ column_sort_order }}</span></td>';
		html += '</tr>';
		html += '</thead>';
		html += '<tbody>';
		html += '<tr></tr>';
		html += '</tbody>';
		html += '<tfoot>';
		html += '<tr>';
		html += '<td colspan="3"></td>';
		html += '<td class="text-end"><button type="button" onclick="addFooterLink(' + footer_column_row + ');" class="btn btn-primary">{{ button_add_link }}</button></td>';
		html += '</tr>';
		html += '</tfoot>';
		html += '</table>';

		html += '</div>';
		html += '</div>';

		$('#footer-columns-holder').append(html);

		$('#column-add').before('<li><a href="#footer-column-' + footer_column_row + '" data-toggle="tab">' + '<i class="fa fa-minus-circle" onclick="$(\'a[href=\\\'#footer-column-' + footer_column_row + '\\\']\').parent().remove(); $(\'#footer-column-' + footer_column_row + '\').remove(); $(\'#footer-column-tabs a:first\').tab(\'show\');"></i> ' + '{{ text_column }} ' + footer_column_row + '</a></li>');


		$('#footer-column-tabs a[href=\'#footer-column-' + footer_column_row + '\']').tab('show');

		footer_column_row++;
		$('[data-toggle=\'tooltip\']').tooltip({ container: 'body' });
	}

    /* Delegated remove handler (executed once for the whole document) */
    $(document)
        .off('click', '.btn-remove-footer-link')
        .on('click', '.btn-remove-footer-link', function (e) {
            e.preventDefault();
            const rowId = $(this).data('rowId');
            $('#' + rowId).remove();
        });

    /* Function to dynamically add a new footer link row */
    function addFooterLink(footer_column_row) {
        const $tbody = $('#links-holder-' + footer_column_row + ' tbody');

        // Count only real link rows (ignore empty <tr></tr>)
        const link_row = $tbody.find('tr[id^="footer-link-row-' + footer_column_row + '-"]').length + 1;

        const rowId = 'footer-link-row-' + footer_column_row + '-' + link_row;

        // Build row HTML dynamically with Twig variables
        let html = '<tr id="' + rowId + '">';
        html += '<td class="first">';
        {% for language in languages %}
            html += '<div class="input-group">';
            html +=
                '<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/></span>';
            html +=
                '<input type="text" class="form-control" name="settings[oxyo][oxyo_footer_columns][' +
                footer_column_row +
                '][links][' +
                link_row +
                '][title][{{ language.language_id }}]"/>';
            html += '</div>';
        {% endfor %}
        html += '</td>';

        html += '<td class="first">';
        html +=
            '<input type="text" class="form-control" name="settings[oxyo][oxyo_footer_columns][' +
            footer_column_row +
            '][links][' +
            link_row +
            '][target]"/>';
        html += '</td>';

        html += '<td class="first">';
        html +=
            '<input type="text" class="form-control" style="width:60px" name="settings[oxyo][oxyo_footer_columns][' +
            footer_column_row +
            '][links][' +
            link_row +
            '][sort]" value="' +
            link_row +
            '"/>';
        html += '</td>';

        html += '<td class="text-end">';
        html +=
            '<button type="button" class="btn btn-danger btn-remove-footer-link" data-row-id="' +
            rowId +
            '">{{ button_remove }}</button>';
        html += '</td>';
        html += '</tr>';

        // Append the new row to the table body
        $tbody.append(html);
    }

    (function(){
        var sel = 'input[name="settings[oxyo][overwrite_footer_links]"]';
        $(document).on('change', sel, function () {
            $('#custom_footer_links_holder').toggle(this.value === '1');
        });
        // initial toggle on load (на случай, если серверный рендер без inline-стиля)
        var checked = $(sel + ':checked').val();
        if (checked) $('#custom_footer_links_holder').toggle(checked === '1');
    })();    
</script>
