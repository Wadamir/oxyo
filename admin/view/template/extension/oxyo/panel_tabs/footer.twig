<legend>{{ text_footer_settings }}</legend>

<legend class="sub">{{ text_footer_custom_block_top }}</legend>
<br/>

<ul class="nav nav-tabs language-tabs">
	{% for language in languages %}
        <li>
            <a href="#footer-block1-language{{ language.language_id }}" data-toggle="tab">
                <img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/>
                {{ language.name }}
            </a>
        </li>
	{% endfor %}
</ul>

<div class="tab-content">
	{% for language in languages %}
        <div class="tab-pane" id="footer-block1-language{{ language.language_id }}">
            <div>{{ text_footer_custom_block_top_tooltip }}</div>

            <div>
                <a
                    class="editor-toggle btn btn-primary"
                    id="enable-editor-footer1-{{ language.language_id }}"
                    onclick="enable_editor('footer1','{{ language.language_id }}')"
                >{{ text_enable_editor }}</a>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <textarea
                        id="editor-textarea-footer1-{{ language.language_id }}"
                        name="settings[oxyo][footer_block_1][{{ language.language_id }}]"
                        class="form-control code"
                    >{{ footer_block_1[language.language_id] ? footer_block_1[language.language_id] }}</textarea>
                </div>
            </div>
        </div>
	{% endfor %}
</div>

{# Footer links switcher #}
<legend class="sub">{{ text_footer_links }}</legend>

<div class="form-group">
	<div class="col-sm-3">
		<label class="control-label text-right p-0 w-100">
			<span data-toggle="tooltip" title="{{ help_overwrite_footer_links }}">{{ entry_overwrite_footer_links }}</span>
		</label>
	</div>

	<div class="col-sm-9">
		<div class="form-radio-switcher-wrapper justify-content-start">
			<label class="label-switcher label-switcher-pre" for="overwrite_footer_links_0">
				{{ text_off is defined ? text_off : (text_disabled is defined ? text_disabled : 'Off') }}
			</label>

			<div class="form-radio form-radio-inline form-radio-switcher">
				<input
					type="radio"
					id="overwrite_footer_links_0"
					name="settings[oxyo][overwrite_footer_links]"
					value="0"
					{% if overwrite_footer_links is not defined or overwrite_footer_links == '0' %}checked="checked"{% endif %}
				/>
				<input
					type="radio"
					id="overwrite_footer_links_1"
					name="settings[oxyo][overwrite_footer_links]"
					value="1"
					{% if overwrite_footer_links is defined and overwrite_footer_links == '1' %}checked="checked"{% endif %}
				/>
			</div>

			<label class="label-switcher label-switcher-post" for="overwrite_footer_links_1">
				{{ text_on is defined ? text_on : (text_enabled is defined ? text_enabled : 'On') }}
			</label>
		</div>
	</div>
</div>

<div id="custom_footer_links_holder" {% if overwrite_footer_links is defined and overwrite_footer_links == '1' %}style="display:block"{% else %}style="display:none"{% endif %}>
	<div class="form-group">
		<label class="col-sm-2 control-label"></label>

		<div class="col-sm-10">
			<ul class="nav content-tabs" id="footer-column-tabs">
				{% set footer_column_row = 1 %}
                {% for oxyo_footer_column in oxyo_footer_columns %}
                    <li>
                        <a href="#footer-column-{{ footer_column_row }}" data-toggle="tab">
                            <i class="fa fa-minus-circle" onclick="$('a[href=\'#footer-column-{{ footer_column_row }}\']').parent().remove(); $('#footer-column-{{ footer_column_row }}').remove(); $('#footer-column-tabs a:first').tab('show');"></i>
                            {{ text_column }} {{ footer_column_row }}
                        </a>
                    </li>
                    {% set footer_column_row = footer_column_row + 1 %}
				{% endfor %}

				<li id="column-add" style="cursor:pointer;">
					<a onclick="addFooterColumn();">
						<i class="fa fa-plus-circle"></i>
						{{ button_add_column }}
					</a>
				</li>
			</ul>

			<div class="tab-content" id="footer-columns-holder">
				{% set footer_column_row = 1 %}

				{% if oxyo_footer_columns is defined %}
				{% for oxyo_footer_column in oxyo_footer_columns %}
				<div class="tab-pane" id="footer-column-{{ footer_column_row }}">
					<div class="tab-content">
						<table class="table table-clean table-footer-column">
							<thead>
								<tr>
									<td width="96%"><h4>{{ text_column_heading }}</h4></td>
									<td width="4%">{{ column_sort_order }}</td>
								</tr>
							</thead>
							<tbody>
								<tr id="column-row{{ footer_column_row }}">
									<td class="first">
										{% for language in languages %}
										<div class="input-group">
											<span class="input-group-addon">
												<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.language_id }}"/>
											</span>
											<input
												type="text"
												class="form-control"
												name="settings[oxyo][oxyo_footer_columns][{{ footer_column_row }}][title][{{ language.language_id }}]"
												value="{{ oxyo_footer_column.title[language.language_id] ? oxyo_footer_column.title[language.language_id] }}"
											/>
										</div>
										{% endfor %}
									</td>
									<td class="text-end">
										<input
											type="text"
											class="form-control"
											style="width:60px"
											name="settings[oxyo][oxyo_footer_columns][{{ footer_column_row }}][sort]"
											value="{{ oxyo_footer_column.sort ? oxyo_footer_column.sort : '99' }}"
										/>
									</td>
								</tr>
							</tbody>
						</table>

						<table id="links-holder-{{ footer_column_row }}" class="table table-clean">
							<thead>
								<tr>
									<td width="48%"><h4>{{ text_column_links }}</h4></td>
									<td width="48%">
										<span data-toggle="tooltip" title="{{ help_link_target }}">{{ text_link_target }}</span>
									</td>
									<td width="4%">
										<span style="white-space:nowrap">{{ column_sort_order }}</span>
									</td>
								</tr>
							</thead>

							<tbody>
								<tr></tr>

								{% set footer_link_row = 1 %}
								{% if oxyo_footer_column.links is defined %}
								{% for link in oxyo_footer_column.links %}
								<tr id="footer-link-row-{{ footer_column_row }}-{{ footer_link_row }}">
									<td class="first">
										{% for language in languages %}
										<div class="input-group">
											<span class="input-group-addon">
												<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.language_id }}"/>
											</span>
											<input
												class="form-control"
												name="settings[oxyo][oxyo_footer_columns][{{ footer_column_row }}][links][{{ footer_link_row }}][title][{{ language.language_id }}]"
												value="{{ link.title[language.language_id] ? link.title[language.language_id] }}"
											/>
										</div>
										{% endfor %}
									</td>

									<td class="first">
										<input
											class="form-control"
											name="settings[oxyo][oxyo_footer_columns][{{ footer_column_row }}][links][{{ footer_link_row }}][target]"
											value="{{ link.target ? link.target }}"
										/>
									</td>

									<td class="first">
										<input
											type="text"
											class="form-control"
											style="width:60px"
											name="settings[oxyo][oxyo_footer_columns][{{ footer_column_row }}][links][{{ footer_link_row }}][sort]"
											value="{{ link.sort ? link.sort : '1' }}"
										/>
									</td>

									<td class="text-end">
										<button
											type="button"
											onclick="$('#footer-link-row-{{ footer_column_row }}-{{ footer_link_row }}').remove();"
											class="btn btn-danger"
										>{{ button_remove }}</button>
									</td>
								</tr>
								{% set footer_link_row = footer_link_row + 1 %}
								{% endfor %}
								{% endif %}
							</tbody>

							<tfoot>
								<tr>
									<td colspan="3"></td>
									<td class="text-end">
										<button
											type="button"
											onclick="addFooterLink({{ footer_column_row }});"
											class="btn btn-primary"
										>{{ button_add_link }}</button>
									</td>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
				{% set footer_column_row = footer_column_row + 1 %}
				{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>
</div>

