<!-- Stickers -->
<div class="form-group">
	<div class="col-sm-12">
		<table id="oxyo_stickers_sale" class="table table-striped table-bordered">
			<thead>
				<tr>
					<td class="text-left" style="width: 20%;"></td>
					<td class="text-left" style="width: 20%;">{{ entry_sticker_text }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_color }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_bg }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_property_sale }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_status }}</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="text-left" style="width: 20%; font-weight: 800">{{ entry_sticker_title_sale }}</td>
					<td class="text-left" style="width: 20%;">
						{% for language in languages %}
							{% set cur_language_id = language.language_id %}
							<div class="input-group pull-left">
								<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/>
								</span>
								<input type="text" name="settings[oxyo][sticker_sale][text][{{ language.language_id }}]" value="{% if sticker_sale.text[cur_language_id] is defined %}{{sticker_sale.text[cur_language_id]}}{% endif %}" placeholder="{{entry_sticker_text}}" class="form-control"/>
							</div>
						{% endfor %}
					</td>
					<td class="text-left" style="width: 15%;">
						<div class="color_input">
                            <div class="input-group form-inline colorfield">
                                <span class="input-group-addon">
                                    <i style="background:{{ sticker_sale.color ? sticker_sale.color : '#FFFFFF' }}"></i>
                                </span>
                                <input class="form-control" name="settings[oxyo][sticker_sale][color]" value="{{ sticker_sale.color ? sticker_sale.color : '#FFFFFF' }}"/>
                            </div>
						</div>
					</td>
					<td class="text-left" style="width: 15%;">
						<div class="color_input">
                            <div class="input-group form-inline colorfield">
                                <span class="input-group-addon">
                                    <i style="background:{{ sticker_sale.bg ? sticker_sale.bg : '#FF0000' }}"></i>
                                </span>
                                <input class="form-control" name="settings[oxyo][sticker_sale][bg]" value="{{ sticker_sale.bg ? sticker_sale.bg : '#FF0000' }}"/>
                            </div>
						</div>
					</td>
					<td class="text-right" style="width: 15%;">
						<select name="settings[oxyo][sticker_sale][discount_status]" class="form-control">
							{% if sticker_sale.discount_status %}
								<option value="1" selected="selected">{{ text_enabled }}</option>
								<option value="0">{{ text_disabled }}</option>
							{% else %}
								<option value="1">{{ text_enabled }}</option>
								<option value="0" selected="selected">{{ text_disabled }}</option>
							{% endif %}
						</select>
					</td>
					<td class="text-right" style="width: 15%;">
						<select name="settings[oxyo][sticker_sale][status]" class="form-control">
							{% if sticker_sale.status %}
								<option value="1" selected="selected">{{ text_enabled }}</option>
								<option value="0">{{ text_disabled }}</option>
							{% else %}
								<option value="1">{{ text_enabled }}</option>
								<option value="0" selected="selected">{{ text_disabled }}</option>
							{% endif %}
						</select>
					</td>
				</tr>
			</tbody>
		</table>
		<table id="oxyo_stickers_sale" class="table table-striped table-bordered">
			<thead>
				<tr>
					<td class="text-left" style="width: 20%;"></td>
					<td class="text-left" style="width: 20%;">{{ entry_sticker_text }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_color }}</td>
					<td class="text-left" style="width: 15%;">{{ entry_sticker_bg }}</td>
