								<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/>
								</span>
								<input type="text" name="settings[oxyo][sticker_new][text][{{ language.language_id }}]" value="{% if sticker_new.text[cur_language_id] is defined %}{{sticker_new.text[cur_language_id]}}{% endif %}" placeholder="{{entry_sticker_text}}" class="form-control"/>
							</div>
						{% endfor %}
					</td>
					<td class="text-left" style="width: 15%;">
						<div class="color_input">
                            <div class="input-group form-inline colorfield">
                                <span class="input-group-addon">
                                    <i style="background:{{ sticker_new.color ? sticker_new.color : '#FFFFFF' }}"></i>
                                </span>
                                <input class="form-control" name="settings[oxyo][sticker_new][color]" value="{{ sticker_new.color ? sticker_new.color : '#FFFFFF' }}"/>
                            </div>
						</div>
					</td>
					<td class="text-left" style="width: 15%;">
						<div class="color_input">
                            <div class="input-group form-inline colorfield">
                                <span class="input-group-addon">
                                    <i style="background:{{ sticker_new.bg ? sticker_new.bg : '#0000FF' }}"></i>
                                </span>
                                <input class="form-control" name="settings[oxyo][sticker_new][bg]" value="{{ sticker_new.bg ? sticker_new.bg : '#0000FF' }}"/>
                            </div>
						</div>
					</td>
					<td class="text-right" style="width: 15%;">
                        <input type="text" name="settings[oxyo][sticker_new][days]" value="{{ sticker_new.days ? sticker_new.days : '0' }}" placeholder="Days to show" class="form-control"/>
