								<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/>
								</span>
								<input type="text" name="settings[oxyo][sticker_sale][text][{{ language.language_id }}]" value="{% if sticker_sale.text[cur_language_id] is defined %}{{ sticker_sale.text[cur_language_id] }}{% endif %}" placeholder="{{ entry_sticker_text }}" class="form-control"/>
							</div>
						{% endfor %}
					</td>
					<td class="text-left" style="width: 15%;">
						<div class="color_input">
							<div class="input-group form-inline colorfield">
								<span class="input-group-addon">
									<i style="background:{{ sticker_sale.color ? sticker_sale.color : '#FFFFFF' }}"></i>
								</span>
								<input class="form-control" name="settings[oxyo][sticker_sale][color]" value="{{ sticker_sale.color ? sticker_sale.color : '#FFFFFF' }}"/>
