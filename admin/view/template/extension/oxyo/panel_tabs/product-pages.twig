<script>
	$(function () {
		// Guard: check if ColorPicker plugin is loaded
		if (typeof $.fn.ColorPicker !== 'function') {
			// Plugin is not available, skip initialization
			return;
		}

		$('.color_input input').ColorPicker({
			onChange: function (hsb, hex, rgb, el) {
				$(el).val('#' + hex);
				$(el).parent().find('i').css('background', '#' + hex);
			},
			onShow: function (colpkr) {
				$(colpkr).show();
				return false;
			},
			onHide: function (colpkr) {
				$(colpkr).hide();
				return false;
			}
		});
	});
</script>

