{# Back button #}
<legend class="hidden d-none">Back button</legend>
<div class="form-group hidden d-none">
	<label class="col-sm-2 control-label">
		<span data-toggle="tooltip" title="Adds a back button in the breadcrumbs">Back button</span>
	</label>
	<div class="col-sm-10 toggle-btn">
		<label><input type="radio" name="settings[oxyo][oxyo_back_btn]" value="0" {% if oxyo_back_btn == '0' %} checked="checked" {% endif %}/><span>Disabled</span>
		</label>
		<label><input type="radio" name="settings[oxyo][oxyo_back_btn]" value="1" {% if oxyo_back_btn == '1' %} checked="checked" {% endif %}/><span>Enabled</span>
		</label>
	</div>
</div>
