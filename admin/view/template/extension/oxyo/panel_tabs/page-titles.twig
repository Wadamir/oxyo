<legend>{{ heading_breadcrumbs }}</legend>

{# Show full path in breadcrumbs #}
<div class="form-group">
	<div class="col-sm-3">
        <label class="control-label text-right p-0 w-100">
            <span data-toggle="tooltip" title="{{ bc_tooltip_full_path }}">{{ bc_full_path }}</span>
        </label>
    </div>
    <div class="col-sm-9">
        <div class="form-radio-switcher-wrapper justify-content-start">
            <label class="label-switcher label-switcher-pre" for="oxyo_breadcrumbs_full_path_0">{{ text_off }}</label>
            <div class="form-radio form-radio-inline form-radio-switcher">
                <input type="radio" name="settings[oxyo][oxyo_breadcrumbs_full_path]" value="0"{% if oxyo_breadcrumbs_full_path is not defined or oxyo_breadcrumbs_full_path == '0' %} checked="checked"{% endif %} id="oxyo_breadcrumbs_full_path_0" />
                <input type="radio" name="settings[oxyo][oxyo_breadcrumbs_full_path]" value="1"{% if oxyo_breadcrumbs_full_path is defined and oxyo_breadcrumbs_full_path == '1' %} checked="checked"{% endif %} id="oxyo_breadcrumbs_full_path_1" />
            </div>
            <label class="label-switcher label-switcher-post" for="oxyo_breadcrumbs_full_path_1">{{ text_on }}</label>
        </div>
    </div>
</div>

