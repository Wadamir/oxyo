{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-oxyo" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel  }}" data-toggle="tooltip" title="{{ button_cancel  }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<br />
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href  }}">{{ breadcrumb.text  }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible">
				<i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default card">
			<div class="panel-heading card-header">
				<i class="fa fa-pencil"></i> {{ text_edit }}
			</div>
			<div class="panel-body card-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-oxyo" class="form-horizontal">
					<fieldset>
						<legend>{{ text_general }}</legend>
						<div class="form-group row">
							<label class="col-sm-2 control-label" for="input-directory"><span data-toggle="tooltip" title="{{ help_directory }}">{{ entry_directory }}</span></label>
							<div class="col-sm-10">
								<select name="theme_oxyo_directory" id="input-directory" class="form-control">
									{% for directory in directories %}
										{% if directory == theme_oxyo_directory %}
											<option value="{{ directory }}" selected="selected">{{ directory }}</option>
										{% else %}
											<option value="{{ directory }}">{{ directory }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
							<div class="col-sm-10">
								<select name="theme_oxyo_status" id="input-status" class="form-control">
									<option value="1" {{ status == 1 ? 'selected="selected"' }}>{{ text_enabled }}</option>
									<option value="0" {{ status == 0 ? 'selected="selected"' }}>{{ text_disabled }}</option>
								</select>
							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend>{{ text_product }}</legend>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-catalog-limit">{{ entry_product_limit }}</label>
							<div class="col-sm-10">
								<input type="text" name="theme_oxyo_product_limit" value="{{ product_limit }}" placeholder="{{ entry_product_limit }}" id="input-catalog-limit" class="form-control" />
								{% if error_product_limit %}
									<div class="text-danger">{{ error_product_limit }}</div>
								{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-catalog-limits-1">{{ entry_product_limits_1 }}</label>
							<div class="col-sm-10">
								<input type="text" name="theme_oxyo_product_limits_1" value="{{ product_limits_1 }}" placeholder="{{ entry_product_limits }}" id="input-catalog-limits-1" class="form-control" />
								{% if error_product_limits_1 %}
									<div class="text-danger">{{ error_product_limits_1 }}</div>
								{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-catalog-limits-2">{{ entry_product_limits_2 }}</label>
							<div class="col-sm-10">
								<input type="text" name="theme_oxyo_product_limits_2" value="{{ product_limits_2 }}" placeholder="{{ entry_product_limits }}" id="input-catalog-limits-2" class="form-control" />
								{% if error_product_limits_2 %}
									<div class="text-danger">{{ error_product_limits_2 }}</div>
								{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-description-limit"><span data-toggle="tooltip" title="{{ help_product_description_length }}">{{ entry_product_description_length }}</span></label>
							<div class="col-sm-10">
								<input type="text" name="theme_oxyo_product_description_length" value="{{ description_length }}" placeholder="{{ entry_product_description_length }}" id="input-description-limit" class="form-control" />
								{% if error_product_description_length %}<div class="text-danger">{{ error_product_description_length }}</div>{% endif %}
							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend>{{ text_image }}</legend>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-category-width">{{ entry_image_category }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_category_width" value="{{ image_category_width }}" placeholder="{{ entry_width }}" id="input-image-category-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_category_height" value="{{ image_category_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_category %}<div class="text-danger">{{ error_image_category }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-manufacturer-width">{{ entry_image_manufacturer  }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_manufacturer_width" value="{{ image_manufacturer_width }}" placeholder="{{ entry_width  }}" id="input-image-manufacturer-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_manufacturer_height" value="{{ image_manufacturer_height }}" placeholder="{{ entry_height  }}" class="form-control" />
									</div>
								</div>
								{% if error_image_manufacturer %}<div class="text-danger">{{ error_image_manufacturer  }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-thumb-width">{{ entry_image_thumb }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_thumb_width" value="{{ image_thumb_width }}" placeholder="{{ entry_width }}" id="input-image-thumb-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_thumb_height" value="{{ image_thumb_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_thumb %}<div class="text-danger">{{ error_image_thumb }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-popup-width">{{ entry_image_popup }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_popup_width" value="{{ image_popup_width }}" placeholder="{{ entry_width }}" id="input-image-popup-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_popup_height" value="{{ image_popup_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_popup %}<div class="text-danger">{{ error_image_popup }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-product-width">{{ entry_image_product }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_product_width" value="{{ image_product_width }}" placeholder="{{ entry_width }}" id="input-image-product-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_product_height" value="{{ image_product_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_product %}<div class="text-danger">{{ error_image_product }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-additional-width">{{ entry_image_additional }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_additional_width" value="{{ image_additional_width }}" placeholder="{{ entry_width }}" id="input-image-additional-width" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_additional_height" value="{{ image_additional_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_additional %}<div class="text-danger">{{ error_image_additional }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-related">{{ entry_image_related }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_related_width" value="{{ image_related_width }}" placeholder="{{ entry_width }}" id="input-image-related" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_related_height" value="{{ image_related_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
									{% if error_image_related %}<div class="text-danger">{{ error_image_related }}</div>{% endif %}
								</div>
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-compare">{{ entry_image_compare }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_compare_width" value="{{ image_compare_width }}" placeholder="{{ entry_width }}" id="input-image-compare" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_compare_height" value="{{ image_compare_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_compare %}<div class="text-danger">{{ error_image_compare }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-wishlist">{{ entry_image_wishlist }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_wishlist_width" value="{{ image_wishlist_width }}" placeholder="{{ entry_width }}" id="input-image-wishlist" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_wishlist_height" value="{{ image_wishlist_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_wishlist %}<div class="text-danger">{{ error_image_wishlist }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-cart">{{ entry_image_cart }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_cart_width" value="{{ image_cart_width }}" placeholder="{{ entry_width }}" id="input-image-cart" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_cart_height" value="{{ image_cart_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_cart %}<div class="text-danger">{{ error_image_cart }}</div>{% endif %}
							</div>
						</div>
						<div class="form-group required row">
							<label class="col-sm-2 control-label" for="input-image-location">{{ entry_image_location }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_location_width" value="{{ image_location_width }}" placeholder="{{ entry_width }}" id="input-image-location" class="form-control" />
									</div>
									<div class="col-sm-6">
										<input type="text" name="theme_oxyo_image_location_height" value="{{ image_location_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
								{% if error_image_location %}<div class="text-danger">{{ error_image_location }}</div>{% endif %}
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}