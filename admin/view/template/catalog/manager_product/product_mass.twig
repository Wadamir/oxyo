<div class="modal-header">
  <div class="zoom-actions pull-right">
    <button type="button" onclick="expand();" class="btn btn-primary btn-sm btn-zoom btn-expand"><i class="fa fa-expand"></i></button>
	<button type="button" onclick="compress();"class="btn btn-primary btn-sm btn-zoom btn-compress hidden"><i class="fa fa-compress"></i></button>
	<button type="button" class="btn btn-danger btn-sm btn-zoom" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
  </div>
  <h4 class="modal-title">{{ entry_data }}</h4>
</div>
<div class="modal-body">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-mass-data" class="form-horizontal">
    {% if type_data == 'name' %}
      {% for language in languages %}
        <div class="input-group">
		  <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
		  <input maxlength="255" type="text" name="product_description[{{ language.language_id }}][{{ type_data }}]" value="" placeholder="{{ entry_data }}" class="form-control" />
		</div>
      {% endfor %}	  
	  {% elseif type_data == 'description' %}
	  <ul class="nav nav-tabs" id="language">
        {% for language in languages %}
          <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
        {% endfor %}
      </ul>
	  <div class="tab-content">
        {% for language in languages %}
          <div class="tab-pane" id="language{{ language.language_id }}">
            <textarea name="product_description[{{ language.language_id }}][description]" placeholder="{{ entry_data }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control"></textarea>
          </div>
		{% endfor %}
	  </div>
	  {% elseif (type_data == 'meta_title') or (type_data == 'meta_h1') or (type_data == 'meta_description') or (type_data == 'meta_keyword') or (type_data == 'tag') %}
	  <div class="alert alert-info">{{ text_generator_info }}</div>
	  <div class="row">
	    <div class="form-group">
	      <label class="col-sm-2 control-label">{{ entry_generator }}</label>
	      <div class="col-sm-10">
		    <div class="input-group"><span class="input-group-addon"><i class="fa fa-random fa-fw"></i></span>
		      <select name="generator_meta_data" class="form-control">
		        <option value="1">{{ text_yes }}</option>
			    <option value="0" selected="selected">{{ text_no }}</option>
		      </select>
		    </div>
	      </div>
	    </div>
	    <div class="form-group{% if type_data == 'meta_title' and manager_product_meta_title_required %} required{% endif %}" id="meta-data-custom">	
	      <label class="col-sm-2 control-label">{{ entry_data }}</label>
	      <div class="col-sm-10">
		    {% for language in languages %}
			  <div class="input-group input-edit-list">
				<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
				{% if (type_data == 'meta_description') or (type_data == 'meta_keyword') %}
				  <textarea maxlength="255" name="product_description[{{ language.language_id }}][{{ type_data }}]" rows="3" placeholder="{{ entry_data }}" class="form-control"></textarea>
				  {% else %}
				  <input{% if type_data != 'tag' %} maxlength="255"{% endif %} type="text" name="product_description[{{ language.language_id }}][{{ type_data }}]" value="" placeholder="{{ entry_data }}" class="form-control" />
				{% endif %}
			  </div>
	        {% endfor %}
	      </div>
	    </div>
		<div class="form-group" id="meta-data-template">
		  <label class="col-sm-2 control-label">{{ entry_template }}</label>
		  <div class="col-sm-10">
			<input type="{% if type_data == 'meta_title' %}text{% else %}hidden{% endif %}" name="manager_product_seo_template_meta_title" value="{{ manager_product_seo_template_meta_title }}" placeholder="{{ entry_template }}" class="form-control" />
			{% if presence_column_meta_h1 != 'meta-tag-h1-not-in-opencart' %}<input type="{% if type_data == 'meta_h1' %}text{% else %}hidden{% endif %}" name="manager_product_seo_template_meta_h1" value="{{ manager_product_seo_template_meta_h1 }}" placeholder="{{ entry_template }}" class="form-control" />{% endif %}
			<input type="{% if type_data == 'meta_description' %}text{% else %}hidden{% endif %}" name="manager_product_seo_template_meta_description" value="{{ manager_product_seo_template_meta_description }}" placeholder="{{ entry_template }}" class="form-control" />
			<input type="{% if type_data == 'meta_keyword' %}text{% else %}hidden{% endif %}" name="manager_product_seo_template_meta_keyword" value="{{ manager_product_seo_template_meta_keyword }}" placeholder="{{ entry_template }}" class="form-control" />
			<input type="{% if type_data == 'tag' %}text{% else %}hidden{% endif %}" name="manager_product_seo_template_tag" value="{{ manager_product_seo_template_tag }}" placeholder="{{ entry_template }}" class="form-control" />
			<br />
			<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_meta_tags }}</div>
		  </div>
		</div>
	  </div>
	  {% elseif type_data == 'image' %}
	  <div class="text-center">
		<a id="thumb-image" class="text-center btn btn-link"><img src="{{ placeholder }}" data-placeholder="{{ placeholder }}" class="img-thumbnail" /></a>
		<input type="hidden" name="image" value="" id="input-mass-image" />
	  </div>
	  {% elseif type_data == 'price' %}
	  <div class="alert alert-info">{{ text_example_price }}</div>
	  <div class="form-group">
	    <div class="col-sm-4">
		  <label class="control-label" for="input-price-method">{{ entry_method_edit }}</label>
		  <select name="price_method" id="input-price-method" class="form-control">
            <option value="plus">{{ text_plus }}</option>
		    <option value="minus">{{ text_minus }}</option>
            <option value="multiply">{{ text_multiply }}</option>
            <option value="divide">{{ text_divide }}</option>
		    <option value="equality">{{ text_equality }}</option>
         </select>
	    </div>
	    <div class="col-sm-4">
	      <label class="control-label" for="input-price-value">{{ entry_value_edit }}</label>
		  <input type="number" name="price_value" value="" placeholder="{{ entry_value_edit }}" id="input-price-value" class="form-control" />
	    </div>
	    <div class="col-sm-4">
		  <label class="control-label" for="input-price-type">{{ entry_type_edit }}</label>
		  <select name="price_type" id="input-price-type" class="form-control">
		    <option value="amount">{{ text_amount }}</option>
		    <option value="percent">{{ text_percent }}</option>
		  </select>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-6">
		  <div class="checkbox">
			<label>
			  <input type="checkbox" name="apply_special" value="1" id="apply-special" />
			  <i class="fa fa-2x icon-checkbox"></i>
			  {{ entry_apply_special }}
			</label>
		  </div>
	    </div>
	    <div class="col-sm-6">
		  <div class="checkbox">
			<label>
			  <input type="checkbox" name="apply_discount" value="1" id="apply-discount" />
			  <i class="fa fa-2x icon-checkbox"></i>
			  {{ entry_apply_discount }}
			</label>
		  </div>
	    </div>
	  </div>
	  {% elseif type_data == 'quantity' %}
	  <div class="alert alert-info">{{ text_example_quantity }}</div>
	  <div class="form-group">	
	    <div class="col-sm-6">
		  <label class="control-label" for="input-quantity-value">{{ entry_value_edit }}</label>
		  <input type="number" name="quantity_value" value="" placeholder="{{ entry_value_edit }}" id="input-quantity-value" class="form-control" />
	    </div>
	    <div class="col-sm-6">
		  <label class="control-label" for="input-quantity-method">{{ entry_method_edit }}</label>
		  <select name="quantity_method" id="input-quantity-method" class="form-control">
            <option value="plus">{{ text_plus }}</option>
		    <option value="minus">{{ text_minus }}</option>
            <option value="multiply">{{ text_multiply }}</option>
            <option value="divide">{{ text_divide }}</option>
		    <option value="equality">{{ text_equality }}</option>
          </select>
	    </div>
	  </div>
	  {% elseif type_data == 'minimum' %}
	  <input type="number" name="minimum" value="" placeholder="{{ entry_value_edit }}" class="form-control" />
	  {% elseif type_data == 'mass_model' %}
	  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_edit_info }}</div>
	  <div class="form-group{% if manager_product_model_required %} required{% endif %}">	
	    <label class="col-sm-2 control-label" for="input-model">{{ entry_model }}</label>
	    <div class="col-sm-10">
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_model" value="1" /></span>
		    <input maxlength="64" type="text" name="model" value="" placeholder="{{ entry_model }}" id="input-model" class="form-control" />
		  </div>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label" for="input-location">{{ entry_location }}</label>
	    <div class="col-sm-10">
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_location" value="1" /></span>
		    <input maxlength="128" type="text" name="location" value="" placeholder="{{ entry_location }}" id="input-location" class="form-control" />
		  </div>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label" for="input-tax-class">{{ entry_tax_class }}</label>
	    <div class="col-sm-10">
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_tax_class_id" value="1" /></span>
		    <select name="tax_class_id" id="input-tax-class" class="form-control">
			  <option value="0">{{ text_none }}</option>
			  {% for tax_class in tax_classes %}
			    <option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>
			  {% endfor %}
		    </select>
		  </div>
	    </div>
	  </div>
	  {% elseif type_data == 'keyword' %}
	  <div class="alert alert-info">{{ text_seo_url_info }}</div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label" for="input-seo-url">{{ entry_generator }}</label>
	    <div class="col-sm-10">
		  <select name="seo_url_generator" id="input-seo-url" class="form-control">
		    <option value="generator" selected="selected">{{ text_seo_template }}</option>
		    <option value="custom">{{ text_seo_custom }}</option>
		  </select>
	    </div>
	  </div>
	  <div class="form-group hidden" id="seo-url-custom">	
	    <label class="col-sm-2 control-label" for="input-seo-url-custom">{{ entry_keyword }}</label>
	    <div class="col-sm-10">
		  <input type="text" name="seo_url" value="" placeholder="{{ entry_keyword }}" id="input-seo-url-custom" class="form-control" />
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label" for="input-type-seo-url"><span data-toggle="tooltip" title="{{ help_type_seo_url }}">{{ entry_type_generator }}</span></label>
	    <div class="col-sm-10">
		  <select name="type_seo_url" id="input-type-seo-url" class="form-control">
		    <option value="none" selected="selected">{{ text_no_overwrite }}</option>
		    <option value="yes">{{ text_overwrite }}</option>
		  </select>
	    </div>
	  </div>
	  {% elseif type_data == 'code' %}
	  <div class="alert alert-info">{{ text_code_generator_info }}</div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label" for="input-generate-code">{{ entry_generator }}</label>
	    <div class="col-sm-10">
		  <select name="code_generator" id="input-generate-code" class="form-control">
		    <option value="custom" selected="selected">{{ text_code_custom }}</option>
			<option value="generator">{{ text_code_generator }}</option>
		  </select>
	    </div>
	  </div>
	  <div class="form-group" id="code-custom">
	    <div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-sku"><span data-toggle="tooltip" title="{{ help_sku }}">{{ entry_sku }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_sku" value="1" /></span>
		      <input maxlength="64" type="text" name="sku" value="" placeholder="{{ entry_sku }}" id="input-sku" class="form-control" />
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-upc"><span data-toggle="tooltip" title="{{ help_upc }}">{{ entry_upc }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_upc" value="1" /></span>
		      <input maxlength="12" type="text" name="upc" value="" placeholder="{{ entry_upc }}" id="input-upc" class="form-control" />
		    </div>
	      </div>
	    </div>
	    <div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-ean"><span data-toggle="tooltip" title="{{ help_ean }}">{{ entry_ean }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_ean" value="1" /></span>
		      <input maxlength="14" type="text" name="ean" value="" placeholder="{{ entry_ean }}" id="input-ean" class="form-control" />
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-jan"><span data-toggle="tooltip" title="{{ help_jan }}">{{ entry_jan }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_jan" value="1" /></span>
		      <input maxlength="13" type="text" name="jan" value="" placeholder="{{ entry_jan }}" id="input-jan" class="form-control" />
		    </div>
	      </div>
	    </div>
	    <div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-isbn"><span data-toggle="tooltip" title="{{ help_isbn }}">{{ entry_isbn }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_isbn" value="1" /></span>
		      <input maxlength="17" type="text" name="isbn" value="" placeholder="{{ entry_isbn }}" id="input-isbn" class="form-control" />
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-mpn"><span data-toggle="tooltip" title="{{ help_mpn }}">{{ entry_mpn }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_mpn" value="1" /></span>
		      <input maxlength="64" type="text" name="mpn" value="" placeholder="{{ entry_mpn }}" id="input-mpn" class="form-control" />
		    </div>
	      </div>
	    </div>
	  </div>
	  <div class="form-group hidden" id="code-generate">
		<div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-sku-prefix"><span data-toggle="tooltip" title="{{ help_sku }}">{{ entry_sku }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_sku" value="1" /></span>
		      <input type="text" name="sku_prefix" value="" placeholder="{{ entry_prefix }}" id="input-sku-prefix" class="form-control" />
			  <input type="number" name="sku_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-upc-prefix"><span data-toggle="tooltip" title="{{ help_upc }}">{{ entry_upc }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_upc" value="1" /></span>
		      <input type="text" name="upc_prefix" value="" placeholder="{{ entry_prefix }}" id="input-upc-prefix" class="form-control" />
			  <input type="number" name="upc_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	    </div>
	    <div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-ean-prefix"><span data-toggle="tooltip" title="{{ help_ean }}">{{ entry_ean }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_ean" value="1" /></span>
		      <input type="text" name="ean_prefix" value="" placeholder="{{ entry_prefix }}" id="input-ean-prefix" class="form-control" />
			  <input type="number" name="ean_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-jan-prefix"><span data-toggle="tooltip" title="{{ help_jan }}">{{ entry_jan }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_jan" value="1" /></span>
		      <input type="text" name="jan_prefix" value="" placeholder="{{ entry_prefix }}" id="input-jan-prefix" class="form-control" />
			  <input type="number" name="jan_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	    </div>
	    <div class="form-group">	
	      <label class="col-sm-2 control-label" for="input-isbn-prefix"><span data-toggle="tooltip" title="{{ help_isbn }}">{{ entry_isbn }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_isbn" value="1" /></span>
		      <input type="text" name="isbn_prefix" value="" placeholder="{{ entry_prefix }}" id="input-isbn-prefix" class="form-control" />
			  <input type="number" name="isbn_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	      <label class="col-sm-2 control-label" for="input-mpn-prefix"><span data-toggle="tooltip" title="{{ help_mpn }}">{{ entry_mpn }}</span></label>
	      <div class="col-sm-4">
		    <div class="input-group">
		      <span class="input-group-addon"><input type="checkbox" name="status_generate_mpn" value="1" /></span>
		      <input type="text" name="mpn_prefix" value="" placeholder="{{ entry_prefix }}" id="input-mpn-prefix" class="form-control" />
			  <input type="number" name="mpn_start" value="" placeholder="{{ entry_start }}" class="form-control" />
			  <span class="input-group-addon" data-toggle="tooltip" title="{{ help_code_template }}" data-html="true"><i class="fa fa-info-circle"></i></span>
		    </div>
	      </div>
	    </div>
	  </div>
	  {% elseif type_data == 'mass_status' %}
	  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_edit_info_2 }}</div>
	  <div class="form-group">	
	    <div class="col-sm-6">
		  <label class="control-label" for="input-date-available">{{ entry_date_available }}</label>
		  <div class="input-group date">
		    <input type="text" name="date_available" value="" placeholder="{{ entry_date_available }}" id="input-date-available" data-date-format="YYYY-MM-DD" class="form-control" />
		    <span class="input-group-btn"><button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button></span>
		  </div>
	    </div>
	    <div class="col-sm-6">
		  <label class="control-label" for="input-status">{{ entry_status }}</label>
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="product_status" value="1" /></span>
		    <select name="status" id="input-status" class="form-control">
			  <option value="1" selected="selected">{{ text_enabled }}</option>
			  <option value="0">{{ text_disabled }}</option>
		    </select>
		  </div>
	    </div>
	  </div>
	  {% elseif type_data == 'mass_shipping' %}
	  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_edit_info }}</div>
	  <div class="form-group">	
	    <div class="col-sm-4">
		  <label class="control-label" for="input-subtract">{{ entry_subtract }}</label>
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_subtract" value="1" /></span>
		    <select name="subtract" id="input-subtract" class="form-control">
			  <option value="1" selected="selected">{{ text_yes }}</option>
			  <option value="0">{{ text_no }}</option>
		    </select>
		  </div>
	    </div>
	    <div class="col-sm-4">
		  <label class="control-label" for="input-stock-status"><span data-toggle="tooltip" title="{{ help_stock_status }}">{{ entry_stock_status }}</span></label>
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_stock_status" value="1" /></span>
		    <select name="stock_status_id" id="input-stock-status" class="form-control">
			  {% for stock_status in stock_statuses %}
			    <option value="{{ stock_status.stock_status_id }}">{{ stock_status.name }}</option>
			  {% endfor %}
		    </select>
		  </div>
	    </div>	
	    <div class="col-sm-4">
		  <label class="control-label" for="input-shipping">{{ entry_shipping }}</label>
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_shipping" value="1" /></span>
		    <select name="shipping" id="input-shipping" class="form-control">
			  <option value="1" selected="selected">{{ text_yes }}</option>
			  <option value="0">{{ text_no }}</option>
		    </select>
		  </div>
	    </div>
	  </div>
	  {% elseif type_data == 'size' %}
	  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_edit_info }}</div>
	  <div class="form-group">
	    <div class="col-sm-3">
		  <label class="control-label" for="input-length">{{ entry_length }}</label>
		  <div class="input-group">
		    <span class="input-group-addon"><input type="checkbox" name="status_length" value="1" /></span>
		    <input type="number" name="length" value="" placeholder="{{ entry_length }}" id="input-length" class="form-control" />
		  </div>
	    </div>
