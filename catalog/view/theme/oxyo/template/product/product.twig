{{ header }}

<ul class="breadcrumb">
	{% for breadcrumb in breadcrumbs %}
		<li>
			<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
		</li>
	{% endfor %}
</ul>

<div id="product-layout" class="container product-layout {{ product_layout }}">
	<div class="row">{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-12 col-sm-6' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-12 col-md-9 col-sm-8' %}
		{% else %}
			{% set class = 'col-12' %}
		{% endif %}
		<div id="content" class="product-main no-min-height {{ class }}">
			{{ content_top }}

			<div class="table__ product-info product-page">

				<div class="table-cell__ left">
                    {% if thumb or video or images %}
                        <div id="gallery" class="image-area {% if not hover_zoom %}hover-zoom-disabled{% endif %}">
                            {% if (sale_badge or new_badge) %}
                                <div class="badges-wrapper">                                            
                                    {% if sale_badge %}
                                        <span class="badge sale_badge"><i>{{ sale_badge }}</i></span>
                                    {% endif %}
                                    {% if new_badge %}
                                        <span class="badge new_badge"><i>{{ new_badge }}</i></span>
                                    {% endif %}
                                    {% if ((qty < 1) and (stock_badge_status)) %}
                                        <span class="badge out_of_stock_badge"><i>{{ oxyo_text_out_of_stock}}</i></span>
                                    {% endif %}
                                </div>
                            {% endif %}                        
                            {% if video  or thumb %}
                                <div id="main-image-wrapper">
                                    {% if video %}
                                        <a href="{{ video }}" id="main-image-link" class="glightbox">
                                            <video id="main-image" class="video-js vjs-default-skin vjs-big-play-centered" muted defaultmuted playsinline webkit-playsinline controls loop autoplay muted preload="none" width="100%" height="auto" poster="{{ video_placeholder }}">
                                                <source src="{{ video }}" type="video/mp4">
                                                <p class="vjs-no-js">{{ text_no_js }}</p>
                                            </video>
                                        </a>
                                    {% else %}
                                        <a href="{{ popup }}" id="main-image-link" class="glightbox">
                                            <img id="main-image" src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                        </a>
                                    {% endif %}
                                </div>
                            {% endif %}
                            <div id="gallery-additional" class="image-additional show-skeleton">
                                {% if video %}
                                    <div>
                                        <a class="link glightbox locked active"
                                            href="{{ video }}"
                                            data-type="video"
                                            data-source="{{ video }}"
                                            data-poster="{{ video_placeholder }}"
                                            data-width="100%"
                                            data-height="100%"
                                            data-zoomable="true"
                                            data-draggable="false">
                                            <video class="video-js vjs-default-skin vjs-big-play-centered" muted defaultmuted playsinline webkit-playsinline autoplay loop muted preload="none" width="100%" height="auto" poster="{{ video_placeholder }}">
                                                <source src="{{ video }}" type="video/mp4">
                                                <p class="vjs-no-js">{{ text_no_js }}</p>
                                            </video>
                                        </a>
                                    </div>
                                {% endif %}
                                {% if thumb and (product_layout != "full-width") %}
                                    <div>
                                        <a class="link glightbox locked{% if not video %} active{% endif %}" 
                                            href="{{ popup }}" 
                                            data-type="image"
                                            data-source="{{ thumb }}"
                                            data-width="100%"
                                            data-height="100%"
                                            data-zoomable="true"
                                            data-draggable="false">
                                            <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                                        </a>
                                    </div>
                                {% endif %}
                                {% if images %}
                                    {% for image in images %}
                                        <div>
                                            <a class="link glightbox locked" 
                                                href="{{ image.popup }}" 
                                                data-source="{{ image.thumb_lg }}"
                                                data-type="image"
                                                data-width="100%"
                                                data-height="100%"
                                                data-zoomable="true"
                                                data-draggable="false">
                                                <img src="{{ image.thumb_lg }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                                            </a>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
                <!-- .table-cell.left ends -->

				<div class="table-cell__ w100 right">
					<div class="inner">
                        <div class="wishlist_compare">
                            <p class="info is_wishlist">
                                <button
                                    type="button"
                                    class="btn btn-icon btn-wishlist"
                                    data-product-id="{{ product_id }}"
                                    aria-label="{{ button_wishlist is defined ? button_wishlist : 'Add to wishlist' }}"
                                    title="{{ button_wishlist is defined ? button_wishlist : 'Add to wishlist' }}"
                                >
                                    <i class="icon-heart" aria-hidden="true"></i>
                                    <span class="visually-hidden">{{ button_wishlist is defined ? button_wishlist : 'Add to wishlist' }}</span>
                                </button>
                            </p>

                            <p class="info is_compare">
                                <button
                                    type="button"
                                    class="btn btn-icon btn-compare"
                                    data-product-id="{{ product_id }}"
                                    aria-label="{{ button_compare is defined ? button_compare : 'Add to compare' }}"
                                    title="{{ button_compare is defined ? button_compare : 'Add to compare' }}"
                                >
                                    <i class="icon-refresh" aria-hidden="true"></i>
                                    <span class="visually-hidden">{{ button_compare is defined ? button_compare : 'Add to compare' }}</span>
                                </button>
                            </p>
                        </div>
						<div class="product-h1">
							<h1 id="page-title">{{ heading_title }}</h1>
						</div>

						{% if review_status and (review_qty > 0) %}
							<div class="rating">
								<span class="rating_stars rating r{{ rating }}">
									<i class="fa fa-star-o"></i>
									<i class="fa fa-star-o"></i>
									<i class="fa fa-star-o"></i>
									<i class="fa fa-star-o"></i>
									<i class="fa fa-star-o"></i>
								</span>
                                <span class="review_link">(<a class="hover_uline to_tabs" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ reviews }}</a>)</span>

                                {% if question_status %}
                                    <p class="info is_ask">
                                        <a class="to_tabs" onclick="$('a[href=\'#tab-questions\']').trigger('click'); return false;"><i class="icon-question"></i>{{ oxyo_button_ask }}</a>
                                    </p>
                                {% endif %}
							</div>
						{% endif %}

                        <p class="info"><b>{{ text_model }}</b> {{ model }}</p>
                        {% if weight %}
                            <p class="info"><b>{{ text_weight }}</b> {{ weight }}</p>
                        {% endif %}
                        <!-- if weight ends -->
                        {% if manufacturer %}
                            <p class="info"><b>{{ text_manufacturer }}</b> <a class="hover_uline" href="{{ manufacturers }}">{{ manufacturer }}</a></p>
                        {% endif %}            
                        <!-- if manufacturer ends -->
                        <p class="info{% if qty > 0 %} in_stock{% endif %}"><b>{{ text_stock }}</b> {{ stock }}</p>                   

                        {% if meta_description_status and meta_description %}
                            <p class="meta_description">{{ meta_description }}</p>
                        {% endif %}                           

                        <div id="product">

                            {% if options %}
                                <div class="options">
                                    {% for option in options %}

                                        {% if option.type == 'select' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <select name="option[{{ option.product_option_id }}]" id="input-option{{ option.product_option_id }}" class="form-control">
                                                        <option value="">{{ text_select }}</option>
                                                        {% for option_value in option.product_option_value %}
                                                            <option value="{{ option_value.product_option_value_id }}">{{ option_value.name }}
                                                                {% if option_value.price %}
                                                                    ({{ option_value.price_prefix }}{{ option_value.price }})
                                                                {% endif %}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'radio' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell radio-cell name">
                                                    <label class="control-label">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell radio-cell">
                                                    <div id="input-option{{ option.product_option_id }}">
                                                        {% for option_value in option.product_option_value %}
                                                            <div class="radio{% if option_value.image %} has-image{% endif %}">
                                                                <label>
                                                                    <input type="radio" name="option[{{ option.product_option_id }}]" value="{{ option_value.product_option_value_id }}"/>
                                                                    {% if option_value.image %}
                                                                        <img src="{{ option_value.image }}" alt="{{ option_value.name }}{% if option_value.price %}({{ option_value.price_prefix }}{{ option_value.price }}){% endif %}" data-toggle="tooltip" data-title="{{ option_value.name }}{% if option_value.price %} ({{ option_value.price_prefix }}{{ option_value.price }}){% endif %}"/>
                                                                    {% endif %}
                                                                    <span class="name">
                                                                        {{ option_value.name }}
                                                                        {% if option_value.price %}
                                                                            ({{ option_value.price_prefix }}{{ option_value.price }})
                                                                        {% endif %}
                                                                    </span>
                                                                </label>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'checkbox' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell checkbox-cell name">
                                                    <label class="control-label">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell checkbox-cell">
                                                    <div id="input-option{{ option.product_option_id }}">
                                                        {% for option_value in option.product_option_value %}
                                                            <div class="checkbox{% if option_value.image %} has-image{% endif %}">
                                                                <label>
                                                                    <input type="checkbox" name="option[{{ option.product_option_id }}][]" value="{{ option_value.product_option_value_id }}"/>
                                                                    {% if option_value.image %}
                                                                        <img src="{{ option_value.image }}" alt="{{ option_value.name }}{% if option_value.price %}({{ option_value.price_prefix }}{{ option_value.price }}){% endif %}" data-toggle="tooltip" data-title="{{ option_value.name }}{% if option_value.price %} ({{ option_value.price_prefix }}{{ option_value.price }}){% endif %}"/>
                                                                    {% endif %}
                                                                    <span class="name">
                                                                        {{ option_value.name }}
                                                                        {% if option_value.price %}
                                                                            ({{ option_value.price_prefix }}{{ option_value.price }})
                                                                        {% endif %}
                                                                    </span>
                                                                </label>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}


                                        {% if option.type == 'text' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control"/>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'textarea' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <textarea name="option[{{ option.product_option_id }}]" rows="5" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control">{{ option.value }}</textarea>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'file' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <button type="button" id="button-upload{{ option.product_option_id }}" data-loading-text="{{ text_loading }}" class="btn btn-default btn-block">
                                                        <i class="fa fa-upload"></i>
                                                        {{ button_upload }}</button>
                                                    <input type="hidden" name="option[{{ option.product_option_id }}]" value="" id="input-option{{ option.product_option_id }}"/>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'date' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <div class="input-group date">
                                                        <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD" id="input-option{{ option.product_option_id }}" class="form-control"/>
                                                        <span class="input-group-btn">
                                                            <button class="btn btn-default" type="button">
                                                                <i class="fa fa-calendar"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'datetime' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <div class="input-group datetime">
                                                        <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD HH:mm" id="input-option{{ option.product_option_id }}" class="form-control"/>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-default">
                                                                <i class="fa fa-calendar"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if option.type == 'time' %}
                                            <div class="form-group{% if option.required %} required{% endif %} table-row">
                                                <div class="table-cell name">
                                                    <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                                </div>
                                                <div class="table-cell">
                                                    <div class="input-group time">
                                                        <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="HH:mm" id="input-option{{ option.product_option_id }}" class="form-control"/>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-default">
                                                                <i class="fa fa-calendar"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                    {% endfor %}
                                    <!-- foreach option -->
                                </div>
                            {% endif %}
                            <!-- if options ends -->

                            {% if recurrings %}
                                <hr>
                                <h3>{{ text_payment_recurring }}</h3>
                                <div class="form-group required">
                                    <select name="recurring_id" class="form-control">
                                        <option value="">{{ text_select }}</option>
                                        {% for recurring in recurrings %}
                                            <option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <div class="help-block" id="recurring-description"></div>
                                </div>
                            {% endif %}
                            <!-- if recurrings ends -->

                            {% if price %}
                                <ul class="list-unstyled price">
                                    {% if not special %}
                                        <li><span class="live-price">{{ price }}<span></li>
                                    {% else %}
                                        <li><span class="live-price price-old">{{ price }}</span><span class="live-price-new">{{ special }}<span></li>
                                    {% endif %}
                                </ul>
                                {% if sale_end_date and product_page_countdown %}
                                    <div class="special_countdown_wrapper">
                                        <div class="special_countdown_description"><span class="icon-clock"></span>  <p>{{ oxyo_text_offer_ends }}</p></div>
                                        <div id="special_countdown"></div>
                                    </div>
                                {% endif %}

                                {% if discounts %}
                                    <p class="discount">
                                        {% for discount in discounts %}
                                            <span>{{ discount.quantity }}{{ text_discount }}<i class="price">{{ discount.price }}</i></span>
                                        {% endfor %}
                                    </p>
                                {% endif %}

                            {% endif %}
                            <!-- if price ends -->                            
                            {% if minimum > 1 %}
                                <div class="alert alert-sm alert-info"><i class="fa fa-info-circle"></i>{{ text_minimum }}</div>
                            {% endif %}
                            <div class="buy-wrapper catalog_hide">
                                <div class="form-group">
                                    <div class="input-type-number input-plus-minus">
                                        <button type="button" class="btn button-minus"></button>
                                        <input type="number" step="1" min="{{ minimum }}" name="quantity" value="{{ minimum }}" id="input-quantity" class="form-control input-quantity"/>
                                        <button type="button" class="btn button-plus"></button>
                                    </div>
                                    <input type="hidden" name="product_id" value="{{ product_id }}"/>
                                    <button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="btn btn-primary">
                                        {% if ((qty < 1) and (stock_badge_status)) %}
                                            {{ oxyo_text_out_of_stock }}
                                        {% else %}
                                            {{ button_cart }}
                                        {% endif %}
                                    </button>
                                </div>
                                {% if (buyoneclick_status and qty > 0) %}
                                    <a href="#" onclick="buyOneClickShow(event);" id="button-buyoneclick" data-loading-text="{{ text_loading }}" class="btn btn-primary">
                                        {{ button_buyoneclick }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        <!-- #product ends -->

                        <div class="clearfix"></div>

                        <div class="info-holder">

                            {% if price and tax %}
                                <p class="info p-tax"><b>{{ text_tax }}</b><span class="live-price-tax">{{ tax }}</span></p>
                            {% endif %}

                            {% if price and points %}
                                <p class="info"><b>{{ text_points }}</b>{{ points }}</p>
                            {% endif %}

                            {% if reward %}
                                <p class="info"><b>{{ text_reward }}</b>{{ reward }}</p>
                            {% endif %}

                            {% if tags %}
                                <p class="info tags">
                                    <b>{{ text_tags }}</b>&nbsp;
                                    <span>
                                        {% for tag in tags %}
                                            <a class="hover_uline" href="{{ tag.href }}">{{ tag.tag }}</a>
                                        {% endfor %}
                                    </span>
                                </p>
                            {% endif %}

                            {% if oxyo_share_btn %}
                                {% if oxyo_sharing_style == 'large' %}
                                    <div class="lg-share">
                                        <div class="social-icons round inversed">
                                            <a class="icon facebook fb_share external" rel="nofollow">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                            <a class="icon twitter twitter_share external" rel="nofollow">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                            <a class="icon pinterest pinterest_share external" rel="nofollow">
                                                <i class="fa fa-pinterest"></i>
                                            </a>
                                            <a class="icon vk vk_share external" rel="nofollow">
                                                <i class="fa fa-vk"></i>
                                            </a>
                                        </div>
                                    </div>
                                {% else %}
                                    <p class="info share">
                                        <b>{{ oxyo_text_share }}:</b>
                                        <a class="single_share fb_share external" rel="nofollow">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                        <a class="single_share twitter_share external" rel="nofollow">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                        <a class="single_share pinterest_share external" rel="nofollow">
                                            <i class="fa fa-pinterest"></i>
                                        </a>
                                        <a class="single_share vk_share external" rel="nofollow">
                                            <i class="fa fa-vk"></i>
                                        </a>
                                    </p>
                                {% endif %}
                            {% endif %}

                        </div>
                        <!-- .info-holder ends -->

                    </div>
                    <!-- .inner ends -->
                </div>
                <!-- .table-cell.right ends -->

            </div>
            <!-- .product-info ends -->
        </div>
        <!-- main column ends -->
        {{ column_right }}
    </div>
    <!-- .row ends -->
</div>
<!-- .container ends -->

<div class="outer-container product-tabs-wrapper">
    <div class="container">

        <!-- Tabs area start -->
        <div class="row">
            <div class="col-12">

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab-btn" data-bs-toggle="tab" data-bs-target="#tab-description" type="button" role="tab" aria-controls="tab-description" aria-selected="true">{{ tab_description }}</button>
                    </li>
                    {% if product_tabs %}
                        {% for tab in product_tabs %}
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="custom-tab-{{ tab.tab_id }}-btn" data-bs-toggle="tab" data-bs-target="#custom-tab-{{ tab.tab_id }}" type="button" role="tab" aria-controls="custom-tab-{{ tab.tab_id }}" aria-selected="false">{{ tab.name }}</button>
                            </li>
                        {% endfor %}
                    {% endif %}
                    {% if attribute_groups %}
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="specification-tab-btn" data-bs-toggle="tab" data-bs-target="#tab-specification" type="button" role="tab" aria-controls="tab-specification" aria-selected="false">{{ tab_attribute }}</button>
                        </li>
                    {% endif %}
                    {% if review_status %}
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="review-tab-btn" data-bs-toggle="tab" data-bs-target="#tab-review" type="button" role="tab" aria-controls="tab-review" aria-selected="false">{{ tab_review }}</button>
                        </li>
                    {% endif %}
                    {% if question_status %}
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="question-tab-btn" data-bs-toggle="tab" data-bs-target="#tab-question" type="button" role="tab" aria-controls="tab-question" aria-selected="false">{{ oxyo_tab_questions }} ({{ questions_total }})</button>
                        </li>
                    {% endif %}                                    
                </ul>

                <!-- Tab panes -->                           
                <div class="tab-content">
                    <div class="tab-pane active" id="tab-description" role="tabpanel" aria-labelledby="description-tab-btn">
                        <h3 class="tab-title">{{ tab_description }}</h3>
                        {{ description }}
                    </div>

                    {% if product_tabs %}
                        {% for tab in product_tabs %}
                            <div class="tab-pane" id="custom-tab-{{ tab.tab_id }}" role="tabpanel" aria-labelledby="custom-tab-{{ tab.tab_id }}-btn">
                                <h3 class="tab-title">{{ tab.name }}</h3>
                                {{ tab.description }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- if product_tabs ends -->

                    {% if attribute_groups %}
                        <div class="tab-pane" id="tab-specification" role="tabpanel" aria-labelledby="specification-tab-btn">
                            <h3 class="tab-title">{{ tab_attribute }}</h3>
                            <div class="table__ table-borderless__   table-striped__ table-specification__ specification">
                                {% for attribute_group in attribute_groups %}
                                    <div class="d-none">{{ attribute_group.name }}</div>
                                    <ul class="dotted list-specification">
                                        {% for attribute in attribute_group.attribute %}
                                            <li>
                                                <span class="spec-name">{{ attribute.name }}</span>
                                                <span class="spec-value">{{ attribute.text }}</span>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    <!-- if attribute_groups ends -->

