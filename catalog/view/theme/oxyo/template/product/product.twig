        const mainImageLink = document.getElementById('main-image-link');
        const additionalLinks = Array.from(document.querySelectorAll('.image-additional a.link'));
        let glightboxInstance;

        // Initialize GLightbox instance
        function initGlightbox() {
            if (glightboxInstance) {
                glightboxInstance.destroy();
            }

            glightboxInstance = GLightbox({
                elements: additionalLinks.map(link => {
                    const type = link.dataset.type || 'image';
                    const href = link.getAttribute('href');
                    const poster = link.dataset.poster || '';
                    const source = link.dataset.source || href;

                    if (type === 'video') {
                        return {
                            href: source,
                            type: 'video',
                            source: 'local',
                            poster: poster,
                            width: '100%',
                            height: 'auto'
                        };
                    } else {
                        return {
                            href: href,
                            type: 'image'
                        };
                    }
                }),
                autoplayVideos: true,
                zoomable: false,
                loop: false,
                touchNavigation: true
            });
        }

        initGlightbox();

        // On click of main image → open GLightbox at correct index
        mainImageLink.addEventListener('click', function (e) {
            e.preventDefault();

            const currentSrcEl = mainImageLink.querySelector('img, video source');
            if (!currentSrcEl) return;

            const currentSrc = currentSrcEl.getAttribute('src') || '';
            if (!currentSrc) return;

            // Find index of currentSrc among the additional thumbnails
            const matchedIndex = additionalLinks.findIndex(link => {
                const href = link.getAttribute('href');
                const type = link.dataset.type || 'image';
                const poster = link.dataset.poster || '';
                const source = link.dataset.source || href;

                if (type === 'video') {
                    return source === currentSrc || href === currentSrc || poster === currentSrc;
                } else {
                    return href === currentSrc;
                }
            });

            const openAt = matchedIndex !== -1 ? matchedIndex : 0;

            glightboxInstance.openAt(openAt);
        });

        // Optional: Re-init GLightbox if DOM changes dynamically
        // MutationObserver or re-run initGlightbox() when needed
    });
</script>
